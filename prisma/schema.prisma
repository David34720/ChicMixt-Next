datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Image {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  url         String
  price       Float    @default(0)       // nouveau champ pour le prix
  reference   String   @default("")      // nouveau champ pour la référence
  promotion   Boolean  @default(false)   // case à cocher "en promotion"
  nouveaute   Boolean  @default(false)   // case à cocher "nouveauté"
  createdAt   DateTime @default(now())
  position    Int      @default(0)       // ordre dans le carousel
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?
  role      String   @default("user")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Comment {
  id            String   @id @default(cuid())
  createdAt     DateTime @default(now())
  commentorId   String
  commentorName String
  message       String
  facebookId    String
}

model Subscriber {
  id         String   @id @default(uuid())
  email      String   @unique
  subscribed Boolean  @default(true)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Newsletter {
  id        String   @id @default(uuid())
  subject   String
  content   String
  theme     String
  createdAt DateTime @default(now())
}

model ImageNewsLetter {
  id        Int      @id @default(autoincrement())
  url       String
  createdAt DateTime @default(now())
}
